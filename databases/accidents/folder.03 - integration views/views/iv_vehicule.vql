CREATE OR REPLACE VIEW iv_vehicule FOLDER = '/03 - integration views'
    PRIMARY KEY ( 'num_acc' , 'num_veh' ) (
    nombre_occupants (description = 'Nombre d''occupants des véhicules de transport en commun')
)
 AS SELECT bv_vehicules.num_acc AS num_acc, bv_vehicules.num_veh AS num_veh, case bv_vehicules.senc WHEN 1 THEN 'Croissant' WHEN 2 THEN 'Décroissant' END AS sens_circulation, nullif(cast(bv_vehicules.occutc AS INTEGER), 0) AS nombre_occupants, bv_obstacle_mobile.description AS obstacle_mobile, bv_obstacle_fixe.description AS obstacle_fixe, bv_categorie_vehicule.description AS categorie_vehicule, bv_point_choc.description AS point_choc, bv_manoeuvre.description AS manoeuvre, bv_manoeuvre.regroupement AS type_manoeuvre FROM ((((bv_vehicules AS bv_vehicules LEFT OUTER JOIN bv_obstacle_fixe AS bv_obstacle_fixe ON bv_vehicules.obs = bv_obstacle_fixe.code ) LEFT OUTER JOIN bv_obstacle_mobile AS bv_obstacle_mobile ON bv_vehicules.obsm = bv_obstacle_mobile.code ) INNER JOIN bv_categorie_vehicule AS bv_categorie_vehicule ON bv_vehicules.catv = bv_categorie_vehicule.code ) LEFT OUTER JOIN bv_manoeuvre AS bv_manoeuvre ON bv_vehicules.manv = bv_manoeuvre.code ) LEFT OUTER JOIN bv_point_choc AS bv_point_choc ON bv_vehicules.choc = bv_point_choc.code  CONTEXT (DATAMOVEMENTPLAN = bv_categorie_vehicule_90582699077210220576204868324295639850628636554150948535245036367412137201917 : OFF);

